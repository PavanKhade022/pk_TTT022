<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.company.mindline.tictactoe">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/tictactoe"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/tictactoe"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="it.company.mindline.tictactoe.singleplayer_register"></activity>
        <activity android:name="it.company.mindline.tictactoe.playwith_computer" />
        <activity android:name="it.company.mindline.tictactoe.playArea" />
        <activity
            android:name="it.company.mindline.tictactoe.MainActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="it.company.mindline.tictactoe.Register"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8688181532532282~9160335881" />

    </application>

</manifest>